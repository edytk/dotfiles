{
   "Print pre to debug": {
    "prefix": "prp",
    "body": [
      "echo '<pre>' . print_r( $1, true ) . '</pre>$2';"
    ],
    "description": "Print pre to debug"
  },
   "convert and print array to json and die": {
    "prefix": "jdie",
    "body": [
      "jdie(json_encode( $${1:data}, JSON_PRETTY_PRINT ));"
    ],
    "description": "convert and print array to json and die"
  },
   "PHP Var": {
    "prefix": "v",
    "body": [
      "$${1:var}"
    ],
    "description": "PHP Var"
  },
   "php": {
    "prefix": "php",
    "body": [
      "<?php",
      ""
    ],
    "description": "php"
  },
   "PHP echo short tags": {
    "prefix": "phpecho",
    "body": [
      "<?= $${1:var}; ?>"
    ],
    "description": "PHP echo short Tags"
  },
   "PHP view if": {
    "prefix": "phpif",
    "body": [
      "<?php if ($${1:var}): ?>",
      "<?php endif; ?>"
    ],
    "description": "PHP view if"
  },
   "PHP view ifelse": {
    "prefix": "phpif",
    "body": [
      "<?php if ($${1:var}): ?>",
      "<?php else: ?>",
      "<?php endif; ?>"
    ],
    "description": "PHP view ifelse"
  },
