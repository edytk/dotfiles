// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "'Fira Code', 'Operator Mono', 'OperatorMono Nerd Font', Menlo, Monaco, 'Courier New', monospace",
    "editor.tabSize": 2,
    "editor.wordWrapColumn": 600,
    "html.format.wrapLineLength": 160,
    "html.format.endWithNewline": true,
    "extensions.autoUpdate": true,
    "git.confirmSync": false,
    "editor.fontLigatures": true,
    "telemetry.enableTelemetry": false,
    "php-cs-fixer.onsave": false,
    "editor.formatOnSave": false,
    "editor.insertSpaces": false,
    "[php]": {
        "editor.tabSize": 4
    },
    "emmet.preferences": {
        "filter.commentAfter": "\n<!-- /[#ID][.CLASS] -->"
    },
    "editor.useTabStops": false,
    "files.encoding": "utf8",
    "editor.renderWhitespace": "all",
    "editor.fontSize": 12,
    "editor.lineHeight": 24,
    "editor.tabCompletion": "on",
    "html.format.indentHandlebars": true,
    "emmet.triggerExpansionOnTab": true,
    "files.associations": {
        "*.vue": "vue"
    },
    "emmet.includeLanguages": {
        "blade": "html",
        "html": "html",
        "erb": "erb",
        "javascript": "javascriptreact",
        "vue": "html",
        "vue-html": "html",
        "ejs": "html"
    },
    "emmet.syntaxProfiles": {
        "javascript": "javascriptreact",
        "sass": "css",
        "vue-html": "html",
        "vue": "html"
    },
    "search.exclude": {
        "build": true,
        ".temp": true,
        "temp": true,
        ".tmp": true,
        "tmp": true,
        "**/*.min.*": true,
        "**/bower": true,
        "**/.tmp": true,
        "**/_bower": true,
        "**/_site": true,
        "**/dev": true,
        "**/local": true,
        "**/prod": true,
        "**/.nuxt": true,
        "**/dist": true,
        "**/wp-admin": true,
        "**/wp-includes": true,
        "**/node_modules": true,
        "**/.sass-cache": true
    },
    "files.exclude": {
        ".git": true,
        "**/.tmp": true,
        "**/node_modules": true,
        // "**/vendor": true,
        // "**/wp-blog-header.php": true,
        // "**/wp-cron.php": true,
        // "**/wp-config-sample.php": true,
        // "**/wp-comments*.php": true,
        // "**/wp-activate.php": true,
        // "**/wp-mail.php": true,
        // "**/wp-login.php": true,
        // "**/wp-load.php": true,
        // "**/wp-settings.php": true,
        // "**/wp-signup.php": true,
        // "**/wp-links*.php": true,
        // "**/wp-track*.php": true,
        // "**/xmlrpc.php": true,
        // "**/readme.html": true,
        // "**/license.txt": true,
        "**/.nuxt": true,
        "**/*.zip": true,
        "**/*.tar": true,
        "**/*.gz": true,
        "**/*.nyc_output": true,
        // "**/uploads": true,
        // "**/plugins": true,
        // "**/.runtime": true,
        "**/.sass-cache": true
    },
    "trailing-spaces.trimOnSave": true,
    "trailing-spaces.saveAfterTrim": true,
    "eslint.autoFixOnSave": true,
    "files.trimTrailingWhitespace": true,
    "window.zoomLevel": 1,
    "workbench.iconTheme": "material-icon-theme",
    "git.enableSmartCommit": true,
    "material-icon-theme.showUpdateMessage": false,
    "typescript.check.npmIsInstalled": false,
    "workbench.startupEditor": "newUntitledFile",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "editor.formatOnPaste": false,
    "editor.autoIndent": false,
    "git.autofetch": true,
    "extensions.ignoreRecommendations": true,
    "workbench.colorCustomizations": {},
    "vsicons.projectDetection.autoReload": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "workbench.colorTheme": "Dracula Soft",
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "editor.fontWeight": "400",
    "editor.quickSuggestionsDelay": 5,
    "scss.lint.idSelector": "warning",
    "scss.lint.duplicateProperties": "warning",
    "scss.lint.important": "warning",
    "scss.lint.emptyRules": "warning",
    "css.lint.duplicateProperties": "warning",
    "css.lint.propertyIgnoredDueToDisplay": "warning",
    "php-cs-fixer.executablePath": "/usr/local/bin/php-cs-fixer",
    "breadcrumbs.enabled": true
}